@model IEnumerable<APIDTO.Product.ProductMinimalDto>

@{
    ViewData["Title"] = "Index";
   
}

<h1>Index</h1>

<p>
    <a asp-action="Index">Product Deatils</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
            </tr>
        }
    </tbody>
</table>

    

<section class="htc__team__area bg__white h1__team--one ptb--150 text__pos">
    <div class="container">
        <div class="row">
            <div class="htc__team__wrap clearfix mt--30">
                @foreach (var item in Model)
                {
                    <!-- Start Single Team -->
                    <div class="col-md-3 col-lg-3 col-sm-4 col-xs-12">
                        <div class="team foo">
                            <div class="team__inner">
                                <div class="team__thumb">
                                    <img src="~/images/team/1.jpg" alt="team image">
                                </div>
                                <div class="team__hover__info">
                                    <ul class="team__social__link">
                                        <li><a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></a></li>
                                        <li><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></li>
                                        <li><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="team__details">
                                <h2><a asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h2>
                           
                            </div>
                        </div>
                    </div>
                    <!-- End Single Team -->
               }
            </div>
        </div>
    </div>
   
</section>
